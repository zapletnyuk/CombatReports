<Window x:Class="CombatReports.ManagingWindows.DialogPrintDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Підтвердження друку" 
        Height="150" 
        Width="320">
    <Grid>
        <StackPanel Margin="5,5,5,5">
            <TextBlock FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Name="TitleTextBox" Margin="0,20,0,10" />
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Name="BtnOk" FontSize="14" Height="25" Content="Підтвердити" Grid.Column="0" Margin="0,0,5,0" Padding="0" Click="BtnOk_Click" />
                <Button Name="BtnCancel" FontSize="14" Height="25" Content="Відмінити" Grid.Column="1" Margin="5,0,0,0" Padding="0" Click="BtnCancel_Click" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
